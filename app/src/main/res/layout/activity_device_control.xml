<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ControlActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@color/tcorange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/deviceName"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:width="100dp"
            android:layout_gravity="center_vertical" />

        <FrameLayout
            android:layout_margin="5dp"
            android:background="@color/tcblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="16sp"
                android:id="@+id/control_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@color/tcorange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:touchscreenBlocksFocus="true"
        android:transitionGroup="true">

        <TextView
            android:layout_gravity="center"
            android:text="@string/macAddress"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp" />

        <FrameLayout
            android:layout_margin="5dp"
            android:background="@color/tcblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="16sp"
                android:id="@+id/control_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="@color/tcorange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:text="@string/status"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp" />

        <FrameLayout
            android:layout_margin="5dp"
            android:background="@color/tcblue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="16sp"
                android:id="@+id/connection_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:src="@drawable/tiny_circuits_long_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
